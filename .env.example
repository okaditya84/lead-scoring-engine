# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/lead_scoring
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_BEHAVIORAL=behavioral_data
KAFKA_TOPIC_DEMOGRAPHIC=demographic_data

# Groq API (Get your free API key from https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# CRM Integration (placeholder for demo)
CRM_API_URL=https://your-crm-api.com
CRM_API_KEY=your_crm_api_key
WHATSAPP_API_URL=https://your-whatsapp-api.com
WHATSAPP_API_KEY=your_whatsapp_api_key

# Model Configuration
MODEL_RETRAIN_THRESHOLD=0.1
DRIFT_DETECTION_ENABLED=true
CONSENT_REQUIRED=true

# API Configuration
API_TITLE=Lead Scoring Engine API
API_VERSION=1.0.0
CORS_ORIGINS=*

# Environment
ENVIRONMENT=development

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
